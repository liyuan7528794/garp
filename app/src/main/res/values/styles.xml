<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <!-- 头部背景图 -->
    <style name="MainHeaderBg">
        <item name="android:background">@color/white</item>
    </style>
    <!-- 头部LOGO -->
    <style name="MainHeaderLogo">
        <item name="android:background">@drawable/logo</item>
    </style>

    <!-- 头部左按钮 -->
    <style name="MainHeaderLeftButton">
        <item name="android:background">@drawable/bg_btn_back</item>
    </style>

    <!-- 头部右按钮 -->
    <style name="MainHeaderRightButton">
        <item name="android:background">@drawable/news</item>
    </style>

    <!-- 头部右按钮 -->
    <style name="HeaderRightButton">
        <item name="android:background">@drawable/right_button</item>
    </style>

    <!-- 头部切换按钮 -->
    <style name="MainHeaderChangeButton">
        <item name="android:background">@drawable/top_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 头部LOGO -->
    <style name="MainHeaderSelect">
        <item name="android:background">@drawable/select</item>
    </style>

    <!-- 头部内容 -->
    <style name="MainHeaderContent">
        <item name="android:textSize">18sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="textsize_t4">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textsize_t3">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textsize_t2">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textsize_t1">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textsize_t0">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
